<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTareaFinal.Views.TareaPage"
             Title="{Binding TitlePage}">
    <VerticalStackLayout Padding="16">
        <ActivityIndicator IsVisible="{Binding loadingIsVisible}"
                           IsRunning="{Binding loadingIsVisible}"
                           Color="Blue"
                           HeightRequest="30"
                           />

        <Label Text="Nombre Tarea"/>
        <Entry Text="{Binding TareaDto.NombreTarea}" Margin="0,0,0,10"/>
        <Button Text="Guardar" Command="{Binding saveCommand}" BackgroundColor="Green"/>

    </VerticalStackLayout>
</ContentPage>